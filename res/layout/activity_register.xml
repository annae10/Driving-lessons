<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/promt_name"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx1"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/tx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="@string/promt_email"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx2"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/tx3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_email"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="@string/promt_password"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx3"
            android:inputType="textPassword"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/tx4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_password"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="@string/promt_con_password"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reg_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx4"
            android:inputType="textPassword"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/reg_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_con_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selecter"
            android:text="@string/reg_bn_label"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/reg_con_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="150dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>